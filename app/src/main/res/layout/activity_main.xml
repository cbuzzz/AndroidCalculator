            android:text="CE"
            android:layout_width="70dp"
            android:layout_height="66dp" android:id="@+id/btnCE"
            tools:text="CE" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="156dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="+"
            android:layout_width="70dp"
            android:layout_height="71dp" android:id="@+id/btnAdd"
            tools:text="+"
            app:layout_constraintStart_toEndOf="@+id/btn3"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnSubtract"
            app:layout_constraintHorizontal_bias="0.44" android:layout_marginBottom="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Screen"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.175"
            app:layout_constraintHorizontal_bias="0.498" android:textSize="24sp"/>
