    <Button
            android:text="="
            android:layout_width="70dp"
            android:layout_height="66dp" android:id="@+id/btnEqual"
            tools:text="=" app:layout_constraintEnd_toStartOf="@+id/btnSubtract"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="28dp"
